                },
                images: [
                    'https://i.postimg.cc/TYpfWkRh/marraige-combo-jpg.png?auto=format&fit=crop&q=80&w=900',
                    'https://images.unsplash.com/photo-1513151233558-d860c5398176?q=80&w=1200&auto=format&fit=crop',
                    'https://images.unsplash.com/photo-1555243896-c709bfa0b564?q=80&w=1200&auto=format&fit=crop',
                    'https://images.unsplash.com/photo-1498654896293-37aacf113fd9?q=80&w=1200&auto=format&fit=crop'
                ]
            },
            'disposable-cups': {
